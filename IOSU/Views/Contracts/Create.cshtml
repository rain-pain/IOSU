@model IOSU.Models.Contract

@{
    ViewData["Title"] = "Create";
}

<h4> Create contract</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="ManagerPassportNumber" class="control-label"></label>
                <select asp-for="ManagerPassportNumber" class="form-control" asp-items="ViewBag.ManagerPassportNumber"></select>
            </div>
            <div class="form-group mb-2">
                <label asp-for="ClientId" class="control-label"></label>
                <select asp-for="ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
            </div>
            <div class="form-group mb-2">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
            </div>
            <div class="form-group mb-2">
                <label asp-for="AmountOfProduct" class="control-label"></label>
                <input asp-for="AmountOfProduct" class="form-control" />
                <span asp-validation-for="AmountOfProduct" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input type="hidden" asp-for="Date" value="@DateTime.Now" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayName("Наименование")
                    </th>
                    <th>
                        @Html.DisplayName("Количество на складе")
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.Products)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Amount
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{


        await Html.RenderPartialAsync("_ValidationScriptsPartial");


    }
         }

