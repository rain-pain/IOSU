@model IEnumerable<IOSU.Models.Client>

@{
    ViewData["Title"] = "Index";
}
<div class="text-center">
    <h3>Заказчики</h3>
    <p>
        <a asp-controller="Clients" asp-action="Create">Create New</a>
    </p>
</div>

<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discount)
            </th>
            <th>
                @Html.DisplayName("Количество контрактов")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                  @if (item.Discount){<a>Есть</a>} else{<a>Нет</a>}
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contracts.Count)
            </td>
            <td>
                <a asp-controller="Clients" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-controller="Clients" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
